#!/usr/bin/env bash
echo "ERROR: poetry is intercepted by the pixi extension." >&2
echo "" >&2
echo "Use pixi equivalents instead:" >&2
echo "  pixi init                      # instead of poetry init" >&2
echo "  pixi add --pypi <package>      # instead of poetry add" >&2
echo "  pixi install                   # instead of poetry install" >&2
echo "  pixi run <command>             # instead of poetry run" >&2
echo "  pixi shell                     # instead of poetry shell" >&2
exit 1
